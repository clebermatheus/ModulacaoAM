<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="@string/pref_default_portadora_amplitude"
        android:inputType="numberDecimal"
        android:key="portadora_amplitude"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_amplitude"/>

    <EditTextPreference
        android:defaultValue="@string/pref_default_portadora_frequencia"
        android:inputType="numberDecimal"
        android:key="portadora_frequencia"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_frequencia"/>
</PreferenceScreen>
